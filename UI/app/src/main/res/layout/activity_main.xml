<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/img_header"
                android:contentDescription="@string/restuarant_img" />

            <include
                android:id="@+id/top_bar"
                layout="@layout/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">


                        <TextView
                            android:id="@+id/app_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/app_name"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/txtBlack"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/app_des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_name"
                            android:layout_marginBottom="15dp"
                            android:text="@string/description"
                            android:textColor="@color/txtAsh"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/id_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_des"
                            android:layout_alignParentStart="true"
                            android:text="@string/idno"
                            android:textColor="@color/txtDarkAsh"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/faver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_des"
                            android:layout_alignBaseline="@+id/id_no"
                            android:layout_alignParentEnd="true"
                            android:drawableStart="@drawable/ic_star_18dp"
                            android:drawablePadding="8dp"
                            android:text="@string/favourites"
                            android:textColor="@color/txtDarkAsh"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">


                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/rounded_view">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="0dp"
                                    android:background="@drawable/img_dish1"
                                    android:contentDescription="@string/restuarant_img" />
                            </RelativeLayout>


                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_dish3"
                                android:contentDescription="@string/restuarant_img" />

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_dish2"
                                android:contentDescription="@string/restuarant_img" />

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_dish1"
                                android:contentDescription="@string/restuarant_img" />

                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_dish_4"
                                android:contentDescription="@string/restuarant_img" />

                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_dish_4"
                                android:contentDescription="@string/restuarant_img" />

                            <ImageView
                                android:id="@+id/img7"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/img_dish_4"
                                android:contentDescription="@string/restuarant_img" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_view">

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp">

                        <TextView
                            android:id="@+id/card3_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location"
                            android:textColor="@color/txtBlack"
                            android:textSize="25sp" />


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/card3_heading"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:drawableStart="@drawable/ic_calender"
                            android:drawablePadding="8dp"
                            android:text="@string/view_map"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/adress_line1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card3_heading"
                            android:layout_marginTop="12dp"
                            android:text="@string/address1"
                            android:textColor="@color/txtAsh"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/adress_line2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/adress_line1"
                            android:layout_marginTop="8dp"
                            android:text="@string/address2"
                            android:textColor="@color/txtAsh"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:id="@+id/card4_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/card4_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="@string/category"
                            android:textColor="@color/txtBlack"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card4_heading"
                            android:layout_marginStart="@dimen/default_gap"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/img_restaurant"
                                android:text="@string/restaurant"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:drawableTop="@drawable/img_bar"
                                android:text="@string/bar"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/img_catering"
                                android:text="@string/catering"
                                android:textAlignment="center" />

                        </LinearLayout>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/card5_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="@string/business"
                            android:textColor="@color/txtBlack"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/seeAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/card5_heading"
                            android:layout_alignParentEnd="true"
                            android:drawableStart="@drawable/ic_calender"
                            android:drawablePadding="8dp"
                            android:text="@string/seeAll" />

                        <TextView
                            android:id="@+id/weekdays"
                            android:layout_width="138dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card5_heading"
                            android:text="@string/montofri"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/weekdays_time"
                            android:layout_width="139dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/weekdays"
                            android:text="@string/time_week" />

                        <TextView
                            android:id="@+id/week_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card5_heading"
                            android:layout_alignBaseline="@+id/weekdays"
                            android:layout_marginTop="1dp"
                            android:layout_toEndOf="@+id/weekdays_time"
                            android:drawableEnd="@+id/weekdays"
                            android:text="@string/weekend"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/week_end"
                            android:layout_toEndOf="@+id/weekdays_time"
                            android:text="@string/time_weekend" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="227dp"
                        android:background="@drawable/img_header"
                        android:contentDescription="@string/restuarant_img" />

                    <RelativeLayout
                        android:id="@+id/cc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="30dp">


                        <TextView
                            android:id="@+id/card6_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/card6_heading"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/card6_des"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/card6_heading"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/card6_des"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/card6_des"
                            android:text="@string/phone"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/mobile_no1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card6_des"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@+id/phone"
                            android:text="@string/mobile_num1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/mobile_no2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card6_des"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@+id/mobile_no1"
                            android:text="@string/mobile_num2"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </RelativeLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/card7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/card7_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/team"
                            android:textAlignment="center"
                            android:textColor="@color/txtBlack"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/img_founder"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/founder" />

                                <TextView
                                    android:id="@+id/fou_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_founder"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/founder_name"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtAsh"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/fou_name"
                                    android:text="@string/founder"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtDarkAsh" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/chef1"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/chef1" />

                                <TextView
                                    android:id="@+id/chef1_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chef1"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/chef1"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtAsh"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chef1_name"
                                    android:text="@string/chef"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtDarkAsh" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/chef2"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/chef2" />

                                <TextView
                                    android:id="@+id/chef2_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chef2"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/chef2"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtAsh"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chef2_name"
                                    android:text="@string/chef"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtDarkAsh" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/chef3"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/chef4" />

                                <TextView
                                    android:id="@+id/chef3_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chef3"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/chef1"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtAsh"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chef3_name"
                                    android:text="@string/chef"
                                    android:textAlignment="center"
                                    android:textColor="@color/txtDarkAsh" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/card8_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/delivery"
                            android:textColor="@color/txtDarkAsh"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card8_heading"
                            android:layout_marginBottom="7dp"
                            android:text="@string/min"
                            android:textColor="@color/txtAsh"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/min"
                            android:layout_marginBottom="7dp"
                            android:text="@string/charge"
                            android:textColor="@color/txtAsh"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/free"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/charge"
                            android:text="@string/free"
                            android:textColor="@color/txtAsh"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/min"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="15dp"
                            android:text="@string/d100"
                            android:textAlignment="viewStart"
                            android:textColor="@color/txtDarkAsh"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/charge"
                            android:layout_alignParentEnd="true"
                            android:text="@string/d10"
                            android:textAlignment="viewStart"
                            android:textColor="@color/txtDarkAsh"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/free"
                            android:layout_alignParentEnd="true"
                            android:text="@string/d200"
                            android:textColor="@color/txtDarkAsh"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_points"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/card9_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reward_points"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:id="@+id/reward_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card9_heading"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="40dp"
                            android:orientation="horizontal">

