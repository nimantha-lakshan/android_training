<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_myView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="70dp"
        android:src="@drawable/ic_person_black_60dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/img_border"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/txt_contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_profile"
        android:text="@string/name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_descriptions"
        android:layout_below="@+id/txt_contactName"
        android:layout_toEndOf="@+id/img_profile"
        android:layout_marginStart="10dp"
        android:text="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>